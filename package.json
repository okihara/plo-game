{
  "name": "plo-game",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:client": "vite",
    "dev:server": "pnpm --filter plo-game-server dev",
    "build": "tsc && vite build",
    "build:server": "pnpm --filter plo-game-server build",
    "build:all": "pnpm run build && pnpm --filter plo-game-server build",
    "start": "pnpm --filter plo-game-server start",
    "preview": "vite preview",
    "setup": "pnpm install"
  },
  "dependencies": {
    "@plo/shared": "workspace:*",
    "@tailwindcss/container-queries": "^0.1.1",
    "lucide-react": "^0.564.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "prisma"
    ]
  }
}
