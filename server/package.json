{
  "name": "plo-game-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate --schema=./prisma/schema.prisma",
    "start": "node --import tsx src/index.ts",
    "bot": "tsx src/bot/index.ts",
    "bot:dev": "tsx watch src/bot/index.ts",
    "bot:prod": "SERVER_URL=https://plo-game-production.up.railway.app tsx src/bot/index.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/jwt": "^9.0.1",
    "@fastify/static": "^9.0.0",
    "@prisma/client": "^6.2.1",
    "dotenv": "^17.2.3",
    "fastify": "^5.2.0",
    "nanoid": "^5.0.9",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tsx": "^4.21.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "prisma": "^6.2.1",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
